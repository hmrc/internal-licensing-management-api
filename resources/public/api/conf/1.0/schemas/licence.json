{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://www.hmrc.gov.uk/webservices/cds/licence/v1.schema.json",
  "title": "Licence",
  "description": "The details of an import or export licence",
  "type": "object",
  "properties": {
    "creationDateTime": {
      "type": "string","format": "date-time"
    },
    "correlationId": {
      "type": "string",
      "format": "uuid"
    },
    "sourceSystem": {
      "type": "string"
    },
    "destinationSystem": {
      "type": "string"
    },
    "licenceRef": {
      "type": "string"
    },
    "licenceStatus": {
      "type": "string"
    },
    "licenceType": {
      "type": "string"
    },
    "licenceUse": {
      "type": "string"
    },
    "startDate": {
      "type": "string",
      "format": "date"
    },
    "endDate": {
      "type": "string",
      "format": "date"
    },
    "licenceLine": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "commodity": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "commodityCode": {
                  "type": "string"
                },
                "supplement": {
                  "type": "string"
                }
              }
            }
          },
          "goodsDescription": {
            "type": "string"
          },
          "controlledBy": {
            "type": "string"
          },
          "quantityUnit": {
            "type": "string"
          },
          "quantityIssued": {
            "type": "number"
          },
          "lineNumber": {
            "type": "integer"
          }
        },
        "required": ["lineNumber"        ]
      },
      "additionalItems": false
    },
    "permittedTrader": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "eori": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          },
          "name": {
            "type": "string"
          },
          "address1": {
            "type": "string"
          },
          "address2": {
            "type": "string"
          },
          "address3": {
            "type": "string"
          },
          "address4": {
            "type": "string"
          },
          "address5": {
            "type": "string"
          },
          "postcode": {
            "type": "string"
          },
          "countryCode": {
            "type": "string"
          }
        },
        "required": [
          "eori",
          "name",
          "address1"
        ]
      },
      "additionalProperties": false
    },
    "country": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "countryCode": {
            "type": "string"
          },
          "countryGroup": {
            "type": "string"
          },
          "countryUse": {
            "type": "string"
          }
        },
        "required": [
          "countryUse"
        ]},
      "additionalProperties": false
    },
    "foreignTrader": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "address1": {
            "type": "string"
          },
          "address2": {
            "type": "string"
          },
          "address3": {
            "type": "string"
          },
          "address4": {
            "type": "string"
          },
          "address5": {
            "type": "string"
          },
          "postcode": {
            "type": "string"
          },
          "countryCode": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "address1"
        ]
      },
      "additionalProperties": false
    },
    "restrictions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          }
        },
        "required": [
          "text"
        ]
      },
      "additionalProperties": false
    }
  },
  "required": [
    "creationDateTime",
    "correlationId",
    "sourceSystem",
    "destinationSystem",
    "licenceRef",
    "licenceStatus",
    "licenceType",
    "licenceUse",
    "startDate",
    "licenceLine"
  ],
  "additionalProperties": false,
  "additionalItems": false
}